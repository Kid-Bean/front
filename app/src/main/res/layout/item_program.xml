<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <LinearLayout
            android:id="@+id/linear_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

            <ImageView
                    android:id="@+id/img_department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/tv_department_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부서 이름"
                    style="@style/AndroidCaption1"
                    android:textColor="@color/black" />

            <TextView
                    android:id="@+id/tv_program_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로그램 이름"
                    style="@style/AndroidBody1"
                    android:textColor="@color/black" />

            <TextView
                    android:id="@+id/tv_program_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로그램 장소"
                    style="@style/AndroidCaption1"
                    android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/linear_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/linear_program"
            app:layout_constraintTop_toTopOf="@+id/linear_program">

        <ImageView
                android:id="@+id/img_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:foregroundGravity="center"
                android:background="@drawable/empty_star"
                tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>