<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/tv_image_quiz_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/AndroidH1"
                android:textColor="@color/black"
                android:text="문제 풀이 결과"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/linearLayout"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            tools:ignore="MissingConstraints,NotSibling">

        <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:foregroundGravity="bottom"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_left"
                android:scaleType="fitCenter"
                tools:ignore="MissingConstraints"
                android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/solved_result"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="15dp"
            tools:ignore="MissingConstraints"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintBottom_toTopOf="@id/button_layout"
            android:orientation="horizontal">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/image_score_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/solved_result"
            app:layout_constraintBottom_toTopOf="@id/bottom">

        <Button
                android:id="@+id/btn_wrong_quiz"
                style="@style/AndroidH2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="자주 틀린 단어"
                android:background="@drawable/shape_round_box"
                android:layout_gravity="center_vertical" />

        <Button
                android:id="@+id/btn_right_quiz"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                style="@style/AndroidH2"
                android:text="맞춘 단어"
                android:background="@drawable/shape_round_box"
                android:layout_gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_home"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal"></Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:text="홈"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_quiz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_quiz"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal"></Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:text="문제 풀기"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_program"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_program"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal"></Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로그램"
                    android:textColor="@color/gray600"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_mypage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_mypage"
                    android:layout_gravity="center_horizontal"></Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="마이페이지"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>