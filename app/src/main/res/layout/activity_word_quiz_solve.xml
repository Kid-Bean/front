<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".quiz.word.ui.WordQuizSolveActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/tv_answer_quiz_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/AndroidH1"
                android:textColor="@color/black"
                android:text="단어 맞추기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/linearLayout"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            tools:ignore="MissingConstraints,NotSibling">

        <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:foregroundGravity="bottom"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_left"
                android:scaleType="fitCenter"
                tools:ignore="MissingConstraints"
                android:contentDescription="TODO">
        </ImageButton>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_title"
            style="@style/AndroidH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="종류가 다른 단어를 찾아보세요!"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/layout_back"
            app:layout_constraintStart_toStartOf="@id/layout_back"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            tools:ignore="NotSibling" />

    <LinearLayout
            android:id="@+id/list_words"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintEnd_toEndOf="@id/linearLayout"
            app:layout_constraintBottom_toTopOf="@id/btn_two">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <Button
                    android:id="@+id/btn_word1"
                    style="@style/AndroidButton1"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:text="단어1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/shape_btn"
                    android:backgroundTint="@color/green50"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:maxLines="1" />

            <Button
                    android:id="@+id/btn_word2"
                    style="@style/AndroidButton1"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="단어2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn"
                    android:backgroundTint="@color/green50"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <Button
                    android:id="@+id/btn_word3"
                    style="@style/AndroidButton1"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:text="단어3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@drawable/shape_btn"
                    android:backgroundTint="@color/green50"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:maxLines="1" />

            <Button
                    android:id="@+id/btn_word4"
                    style="@style/AndroidButton1"
                    android:textColor="@color/black"
                    android:text="단어4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:background="@drawable/shape_btn"
                    android:backgroundTint="@color/green50"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
            android:id="@+id/btn_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom">

        <Button
                android:id="@+id/btnAnswer"
                style="@style/AndroidButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_btn"
                android:backgroundTint="@color/green"
                android:includeFontPadding="false"
                android:text="정답"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_home"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal">
            </Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:text="홈"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_quiz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_quiz"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal">
            </Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:text="문제 풀기"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_program"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_program"
                    android:backgroundTint="@color/gray600"
                    android:layout_gravity="center_horizontal">
            </Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로그램"
                    android:textColor="@color/gray600"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_mypage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_mypage"
                    android:layout_gravity="center_horizontal">
            </Button>

            <TextView
                    style="@style/AndroidCaption2"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="마이페이지"
                    android:layout_gravity="center_horizontal">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>