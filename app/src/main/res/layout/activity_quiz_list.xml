<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".quiz.QuizListActivity">

<LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

    <TextView
            android:id="@+id/tv_image_quiz_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/AndroidH1"
            android:textColor="@color/black"
            android:text="문제 풀기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>

<LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        tools:ignore="MissingConstraints,NotSibling">

    <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:foregroundGravity="bottom"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            android:contentDescription="TODO">
    </ImageButton>
</LinearLayout>

<LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_back">

    <TextView
            android:id="@+id/mypage_name"
            style="@style/AndroidH2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:gravity="center_horizontal"
            android:text="어떤 카테고리를 선택할까요?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">
    </TextView>
</LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_list"
        app:layout_constraintBottom_toTopOf="@id/bottom">

    <Button
            android:id="@+id/btn_image"
            style="@style/AndroidH2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:text="그림 맞추기"
            android:background="@drawable/shape_round_box"
            android:layout_gravity="center_vertical">
    </Button>
    <Button
            android:id="@+id/btn_word"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            style="@style/AndroidH2"
            android:text="단어 맞추기"
            android:background="@drawable/shape_round_box"
            android:layout_gravity="center_vertical">
    </Button>
    <Button
            android:id="@+id/btn_voice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="@style/AndroidH2"
            android:text="질문 대답하기"
            android:background="@drawable/shape_round_box"
            android:layout_gravity="center_horizontal">
    </Button>

</LinearLayout>



<LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_home"
                android:backgroundTint="@color/gray600"
                android:layout_gravity="center_horizontal">
        </Button>

        <TextView
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray600"
                android:text="홈"
                android:layout_gravity="center_horizontal">

        </TextView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_quiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_quiz"
                android:layout_gravity="center_horizontal">
        </Button>

        <TextView
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="문제 풀기"
                android:layout_gravity="center_horizontal">

        </TextView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_program"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_program"
                android:backgroundTint="@color/gray600"
                android:layout_gravity="center_horizontal">
        </Button>

        <TextView
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로그램"
                android:textColor="@color/gray600"
                android:layout_gravity="center_horizontal">

        </TextView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/gray600"
                android:background="@drawable/ic_mypage"
                android:layout_gravity="center_horizontal">
        </Button>

        <TextView
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray600"
                android:text="마이페이지"
                android:layout_gravity="center_horizontal">

        </TextView>
    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>