<shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
    <!-- 테두리 설정 -->
    <stroke
            android:width="2dp"
            android:color="@android:color/black" /> <!-- 테두리의 색상을 지정합니다 -->
    <!-- 모서리 둥글기 설정 -->
    <corners android:radius="16dp" /> <!-- 반지름을 조절하여 모서리의 둥근 정도를 변경할 수 있습니다 -->
    <!-- 안쪽 배경 색상 설정 -->
    <solid android:color="@android:color/white" /> <!-- 안쪽 배경의 색상을 지정합니다 -->
</shape>