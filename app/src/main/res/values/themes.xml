<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Front" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/gray600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/gray200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Front" parent="Base.Theme.Front" />

    <style name="AndroidH1">
